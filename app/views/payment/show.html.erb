<div class="bar">    
    <%= link_to root_path do %>  
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
    <% end %>
    <h2>Transactions</h2>
    <%= render "partials/logout" %> 
</div>

<div class="fakeNab">
        Most recent
        <p>-</p>
</div>

<div class="total">
    <p>Total amount</p>    
    $<%= @category.Totalamount %>
</div>


<div class='category'>
    <% @payments.each do |item| %>
        <div class="transaction">
            <div class="text">
                <%= item.payment.name %>
                <br />
                <%= item.payment.created_at.to_date.strftime("%d %B %Y") %>    
            </div>    
            $<%= item.payment.amount %>
        </div>    
    <% end %>
</div> 

<footer class="button">
    <%= link_to 'New transaction', add_new_payment_path(@category.id) %>
</footer>




